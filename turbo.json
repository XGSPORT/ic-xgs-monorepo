{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "deploy:local": {
      "dependsOn": ["build", "lint"]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "env": [
        "AUTH0_DOMAIN",
        "AUTH0_CLIENT_ID",
        "AUTH0_CLIENT_SECRET",
        "AUTH0_PRESERVE_KEYWORDS",
        "AUTH0_ALLOW_DELETE",
        "WEB_APP_URL",
        "HASURA_GRAPHQL_ENDPOINT",
        "HASURA_GRAPHQL_ADMIN_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "pretest": {
      "dependsOn": ["^pretest"]
    },
    "test": {
      "dependsOn": ["pretest"]
    }
  }
}
